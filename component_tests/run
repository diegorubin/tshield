#!/bin/bash

cd component_tests
ruby server.rb &
SERVER=$!

ruby grpc_server.rb &
GRPC_SERVER=$!

../bin/tshield -c config.yml &
TSHIELD=$!

sleep 10

cd ..
cucumber
export STATUS="$?"

echo "killing server($SERVER) server($GRPC_SERVER) tshield($TSHIELD)"
kill $SERVER $GRPC_SERVER $TSHIELD

exit $STATUS
